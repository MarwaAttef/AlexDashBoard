<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewId"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="29px"
    android:padding="2dp"
    android:weightSum="1"
    card_view:cardCornerRadius="3px"
    card_view:cardElevation="3dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp"
       >

        <FrameLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

         >

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left"

                android:orientation="horizontal">
                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_outline"
                    android:padding="5dp"
                    android:layout_marginLeft="24px"
                   >
                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="100dp"
                    android:layout_height="100dp"

                    android:layout_alignParentBottom="true"
                    android:layout_alignParentTop="true"
                    android:contentDescription="TODO" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10px"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/name"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:gravity="left"
                    android:layout_width="130dip"
                    android:maxLines="3"
                    android:text="Marshmalloweyyyeeeeeeeeeeeeeeeeeeeeerrrrrrrrrrrrrreeeeeeeeeeeey"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="#0372FF"
                     />
                <TextView
                    android:id="@+id/popularname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:ellipsize="marquee"
                    android:fontFamily="sans-serif-regular"
                    android:maxLines="1"
                    android:text="Android 6.0"
                    android:textColor="#757575"
                    />

                <TextView
                    android:id="@+id/diatance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#757575"
                    android:fontFamily="roboto-regular"

                     />
            </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ratelayout"
                android:background="@drawable/rounded_rate"
                android:padding="5dp"
                android:layout_gravity="right"
                android:layout_marginLeft="20px">
            <TextView
                android:radius="4dp"
                android:paddingTop="2dp"
                android:paddingLeft="2dp"
                android:paddingBottom="2dp"
                android:paddingRight="2dp"
                android:id="@+id/Rate"
                android:background="@layout/rounded_border_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tyty"
                android:textColor="@android:color/white"
                android:textStyle="bold">
            </TextView>/>
            </LinearLayout>

        </FrameLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageButton1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="#00000000"
                android:src="@drawable/ic_favorite" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="#00000000"
                android:src="@drawable/group846" />

        </LinearLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginTop="110dp"
          android:layout_marginLeft="24px"
          android:orientation="vertical"
          >
          <TextView
              android:layout_width="220dip"
              android:layout_height="match_parent"
              android:id="@+id/review"
              android:textColor="@android:color/black"
              android:fontFamily="roboto_regular"
              android:maxLines="2"

              />
          <TextView
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/username"
              android:textColor="#757575"
              android:fontFamily="roboto_regular"
              />
      </LinearLayout>
    </RelativeLayout>
</LinearLayout>

</android.support.v7.widget.CardView>