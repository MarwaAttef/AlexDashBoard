
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
        android:background="#EEEEEE"
        tools:context="com.example.wedad.design.welcomscreens.mainNavigation.HistoryFragment">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:id="@+id/img"
            android:src="@drawable/background_tab"
            />
    <android.support.v7.widget.RecyclerView

            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:background="#EEEEEE"
        android:layout_marginTop="29px"
        android:layout_marginLeft="29px"
        android:layout_marginRight="29px"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            />

    </FrameLayout>
